<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:background="@color/fondo"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnCodificar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="70dp"
        android:text="CODIFICAR A MORSE"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/amarillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDecodificar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/amarillo"
        android:text="DECODIFICAR DE MORSE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCodificar" />

    <Button
        android:id="@+id/btnConfiguracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="CONFIGURACION"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDecodificar" />

    <Button
        android:id="@+id/btnMarcacionRapida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Marcacion rapida"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLlamar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#CC1010"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnLlamar"
        android:layout_width="210sp"
        android:layout_height="210sp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#CC1010"
        app:backgroundTint="#CC1010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:layout_width="343dp"
        android:layout_height="124dp"
        android:elevation="16dp"

        android:fontFamily="@font/cantata_one"
        android:gravity="center"
        android:text="SOS"
        android:textColor="@color/white"
        android:textSize="92sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnLlamar"
        app:layout_constraintEnd_toEndOf="@+id/btnLlamar"
        app:layout_constraintStart_toStartOf="@+id/btnLlamar"
        app:layout_constraintTop_toTopOf="@+id/btnLlamar" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/btnMarcacionRapida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfiguracion" />


</androidx.constraintlayout.widget.ConstraintLayout>